---
import BaseLayout from '@layouts/BaseLayout.astro';
import Section from '@components/Section.astro';
import { TOOLS } from '@data/tools';
---
<BaseLayout title="Tools & Resources — SPARQ Team">
  <Section id="tools" title="Tools & platforms" subtitle="Link to docs, repos, or hosted apps.">
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {TOOLS.map(t => (
        <div class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
          <h3 class="font-semibold">{t.name}</h3>
          <p class="mt-2 text-sm text-neutral-700">{t.blurb}</p>
          <a href={t.link} class="mt-3 inline-block text-sm font-semibold text-blue-700 hover:underline">{t.cta} →</a>
        </div>
      ))}
    </div>
  </Section>
</BaseLayout>
