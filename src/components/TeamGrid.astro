---
import { TEAM } from '@data/team';
---
<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
  {TEAM.map(m => (
    <div class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
      <div class="flex items-start gap-4">
        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gradient-to-br from-emerald-200 to-blue-200 text-sm font-semibold text-neutral-700">{m.initials}</div>
        <div>
          <h3 class="font-semibold">{m.name}</h3>
          <p class="text-sm text-neutral-600">{m.role}</p>
          <p class="mt-2 text-sm text-neutral-700">{m.blurb}</p>
          <a class="mt-3 block text-sm text-blue-700 hover:underline" href={`mailto:${m.email}`}>Contact â†’</a>
        </div>
      </div>
    </div>
  ))}
</div>
