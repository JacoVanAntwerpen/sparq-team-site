---
import { SITE } from '@data/site';
---
<div class="grid gap-6 md:grid-cols-2">
  <div class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm">
    <form onsubmit="event.preventDefault(); window.location = `mailto:${SITE.email}`" class="grid gap-3">
      <input class="w-full rounded-xl border border-neutral-200 px-3 py-2 text-sm" placeholder="Your name" />
      <input class="w-full rounded-xl border border-neutral-200 px-3 py-2 text-sm" placeholder="Your email" />
      <textarea class="w-full rounded-xl border border-neutral-200 px-3 py-2 text-sm" placeholder="Project overview" rows="5"></textarea>
      <button class="rounded-xl border border-neutral-200 bg-neutral-900 text-white px-4 py-2 text-sm font-semibold hover:opacity-90">Send</button>
    </form>
  </div>
  <div class="space-y-3">
    <div class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm">
      <div class="space-y-1">
        <div class="text-sm text-neutral-600">Email</div>
        <a class="font-medium" href={`mailto:${SITE.email}`}>{SITE.email}</a>
      </div>
    </div>
    <div class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm">
      <div class="space-y-1">
        <div class="text-sm text-neutral-600">Address</div>
        <div class="font-medium">{SITE.address}</div>
      </div>
    </div>
  </div>
</div>
