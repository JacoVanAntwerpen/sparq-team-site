---
import { PROJECTS } from '@data/projects';
---
<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  {PROJECTS.map(p => (
    <div class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
      <div class="flex h-full flex-col justify-between">
        <div>
          <h3 class="font-semibold">{p.title}</h3>
          <p class="mt-2 text-sm text-neutral-700">{p.summary}</p>
        </div>
        <div class="mt-4 flex flex-wrap gap-2">
          {p.tags.map(t => (<span class="inline-flex items-center rounded-full border px-3 py-1 text-xs font-medium border-neutral-200 bg-white/60 backdrop-blur">{t}</span>))}
        </div>
        <div class="mt-4">
          <a href={p.link} class="text-sm font-medium text-blue-700 hover:underline">Learn more â†’</a>
        </div>
      </div>
    </div>
  ))}
</div>
