---
const { id='', title='', subtitle='', edge=false } = Astro.props;
function cx(...xs){return xs.filter(Boolean).join(' ');}
---
<section id={id} class={cx('py-16', edge && 'bg-neutral-50 border-y')}>
  <div class="mx-auto max-w-7xl px-4">
    {(title || subtitle) && (
      <div class="mb-8 max-w-3xl">
        {title && <h2 class="text-2xl md:text-3xl font-bold tracking-tight">{title}</h2>}
        {subtitle && <p class="mt-2 text-neutral-600">{subtitle}</p>}
      </div>
    )}
    <slot />
  </div>
</section>
